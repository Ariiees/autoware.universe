<launch>
  <arg name="input_topic_name" default="pointcloud_raw_ex"/>
  <arg name="output_topic_name" default="blockage_diag/pointcloud"/>
  <arg name="blockage_diagnostics_param_file" default="$(find-pkg-share pointcloud_preprocessor)/config/blockage_diagnostics.param.yaml"/>
  <arg name="filter_param_file" default="$(find-pkg-share pointcloud_preprocessor)/config/filter.param.yaml"/>
  <node pkg="pointcloud_preprocessor" exec="blockage_diag_node" name="blockage_diag">
    <remap from="input" to="$(var input_topic_name)"/>
    <remap from="output" to="$(var output_topic_name)"/>
    <param from="$(var blockage_diagnostics_param_file)"/>
    <param from="$(var filter_param_file)"/>
  </node>
</launch>
