<launch>
  <arg name="input_topic_name" default="/velodyne_points_ex"/>
  <arg name="output_topic_name" default="/pointcloud_filtered"/>
  <arg name="input_frame" default="base_link"/>
  <arg name="output_frame" default="base_link"/>
  <arg name="radius_search_2d_outlier_filter_param_file" default="$(find-pkg-share pointcloud_preprocessor)/config/radius_search_2d_outlier_filter.param.yaml"/>
  <arg name="filter_param_file" default="$(find-pkg-share pointcloud_preprocessor)/config/filter.param.yaml"/>
  <node pkg="pointcloud_preprocessor" exec="radius_search_2d_outlier_filter_node" name="radius_search_2d_outlier_filter">
    <param from="$(var radius_search_2d_outlier_filter_param_file)"/>
    <param from="$(var filter_param_file)"/>
    <remap from="input" to="$(var input_topic_name)"/>
    <remap from="output" to="$(var output_topic_name)"/>
    <param name="input_frame" value="$(var input_frame)"/>
    <param name="output_frame" value="$(var output_frame)"/>
  </node>
</launch>
