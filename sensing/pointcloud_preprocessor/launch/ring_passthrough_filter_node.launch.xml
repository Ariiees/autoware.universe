<launch>
  <arg name="input_topic_name" default="/sensing/lidar/top/pointcloud_raw"/>
  <arg name="output_topic_name" default="/sensing/lidar/top/ring_passthrough_filtered/pointcloud"/>
  <arg name="input_frame" default=""/>
  <arg name="output_frame" default="base_link"/>
  <arg name="passthrough_filter_uint16_param_file" default="$(find-pkg-share pointcloud_preprocessor)/config/passthrough_filter_unit16.param.yaml"/>
  <arg name="filter_param_file" default="$(find-pkg-share pointcloud_preprocessor)/config/filter.param.yaml"/>
  <node pkg="pointcloud_preprocessor" exec="passthrough_filter_uint16_node" name="passthrough_filter">
    <remap from="input" to="$(var input_topic_name)"/>
    <remap from="output" to="$(var output_topic_name)"/>
    <param name="filter_field_name" value="$(var filter_field_name)"/>
    <param name="input_frame" value="$(var input_frame)"/>
    <param name="output_frame" value="$(var output_frame)"/>
  </node>
</launch>
